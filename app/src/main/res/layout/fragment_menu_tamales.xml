<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:stretchColumns="*"
        tools:context=".ui.menu_tamales.Menu_TamalesFragment">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/border">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="PRODUCTO"
                android:textStyle="bold"/>
            <TextView
                android:text="PRECIO"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="CANTIDAD"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="TOTAL"/>
        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="left|center"
                android:text="Verde:" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="right|center"
                android:text="@string/price_verde"
                />
            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/decrease_verde"
                    android:onClick="decreaseVerde"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-"
                    />

                <TextView
                    android:id="@+id/integer_verde"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:text="0" />
                <Button
                    android:id="@+id/increase_verde"
                    android:onClick="increaseVerde"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+" />

            </LinearLayout>

            <TextView
                android:id="@+id/integer_verdetot"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:gravity="right|center"
                android:text="$0.00"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="left|center"
                android:text="Rajas:" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="right|center"
                android:text="@string/price_rajas"
                />
            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/decrease_rajas"
                    android:onClick="decreaseRajas"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-" />
                <TextView
                    android:id="@+id/integer_rajas"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="0"/>
                <Button
                    android:id="@+id/increase_rajas"
                    android:onClick="increaseRajas"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+" />

            </LinearLayout>

            <TextView
                android:id="@+id/integer_rajastot"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:gravity="right|center"
                android:text="$0.00"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="left|center"
                android:text="Mole:" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="right|center"
                android:text="@string/price_mole"
                />
            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/decrease_mole"
                    android:onClick="decreaseMole"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-" />
                <TextView
                    android:id="@+id/integer_mole"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="0"/>
                <Button
                    android:id="@+id/increase_mole"
                    android:onClick="increaseMole"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+" />

            </LinearLayout>

            <TextView
                android:id="@+id/integer_moletot"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:gravity="right|center"
                android:text="$0.00"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="left|center"
                android:text="Pasas:" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="right|center"
                android:text="@string/price_pasas"
                />
            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/decrease_pasas"
                    android:onClick="decreasePasas"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-" />
                <TextView
                    android:id="@+id/integer_pasas"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="0"/>
                <Button
                    android:id="@+id/increase_pasas"
                    android:onClick="increasePasas"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+" />

            </LinearLayout>

            <TextView
                android:id="@+id/integer_pasastot"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:gravity="right|center"
                android:text="$0.00"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="left|center"
                android:text="Piña:" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="right|center"
                android:text="@string/price_pina"
                />
            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/decrease_pina"
                    android:onClick="decreasePina"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-" />
                <TextView
                    android:id="@+id/integer_pina"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="0"/>
                <Button
                    android:id="@+id/increase_pina"
                    android:onClick="increasePina"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+" />

            </LinearLayout>

            <TextView
                android:id="@+id/integer_pinatot"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:gravity="right|center"
                android:text="$0.00"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="left|center"
                android:text="Champiñón:" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="right|center"
                android:text="@string/price_champi"
                />
            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/decrease_champi"
                    android:onClick="decreaseChampi"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-" />
                <TextView
                    android:id="@+id/integer_champi"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="0"/>
                <Button
                    android:id="@+id/increase_champi"
                    android:onClick="increaseChampi"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+" />

            </LinearLayout>

            <TextView
                android:id="@+id/integer_champitot"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:gravity="right|center"
                android:text="$0.00"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="left|center"
                android:text="Queso con \nZarzamora:" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="right|center"
                android:text="@string/price_quesozar"
                />
            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/decrease_quesozar"
                    android:onClick="decreaseQuesoZar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-" />
                <TextView
                    android:id="@+id/integer_quesozar"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="0"/>
                <Button
                    android:id="@+id/increase_quesozar"
                    android:onClick="increaseQuesoZar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+" />

            </LinearLayout>

            <TextView
                android:id="@+id/integer_quesozartot"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:gravity="right|center"
                android:text="$0.00"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="left|bottom"
                android:text="Extras"
                android:textStyle="bold"
                android:layout_column="0"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="left|center"
                android:text="Bolillo:" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="right|center"
                android:text="@string/price_bolillo"
                />
            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/decrease_bolillo"
                    android:onClick="decreaseBolillo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-" />
                <TextView
                    android:id="@+id/integer_bolillo"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="0"/>
                <Button
                    android:id="@+id/increase_bolillo"
                    android:onClick="increaseBolillo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+" />

            </LinearLayout>

            <TextView
                android:id="@+id/integer_bolillotot"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:gravity="right|center"
                android:text="$0.00"/>
        </TableRow>






        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/border2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="TOTAL:"
                android:layout_column="2"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/integer_totaltamales"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:layout_marginRight="10dp"
                android:gravity="bottom|right|center"
                android:text="$0.00"
                android:textStyle="bold" />
        </TableRow>









    </TableLayout>

</ScrollView>

